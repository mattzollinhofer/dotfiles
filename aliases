alias vi=vim
alias be='bundle exec'
alias console='be pry -r ./config/environment.rb'
alias g=git
alias d='git diff'
alias s='git status'
alias p='git pull'
alias hub=git
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ls='ls -G'
alias ll='ls -Alh'
alias l='ll'
alias c=clear

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

