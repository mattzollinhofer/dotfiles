alias vi=vim
alias vv="vim ~/.vimrc"
alias be='bundle exec'
alias console='be pry -r ./config/environment.rb'

alias d='git diff'
alias s='git status'
alias p='git pull'
alias gls='git ls'
alias gl='clear; git ls'
alias ga='clear; git add -p'
alias gc='git ci'
alias gca='clear; git ci --amend'
alias gls="git ls | fzf --multi --reverse --preview 'git show {+2}'"

alias psg="ps -ef | grep "
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ls='ls -G'
alias ll='ls -Alh'
alias l='ll'
alias c=clear
alias hg='history | grep -i'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

